<Window x:Class="EChartsTest.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EChartsTest"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800" WindowStartupLocation="CenterOwner">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBox HorizontalAlignment="Center" MinWidth="300" Height="30" VerticalContentAlignment="Center"/>
        <ComboBox Margin="0,20"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="确定" Click="Button_Click" Width="80" Height="30"/>
            <Button Content="取消" Click="Button_Click_1" Margin="10,0,0,0" Width="80" Height="30"/>
        </StackPanel>
    </StackPanel>
</Window>
